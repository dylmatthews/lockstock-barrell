<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="matthewsware.lockstockandbarrell">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".signup"
            android:label="@string/title_activity_signup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".addrepair"
            android:label="@string/title_activity_addrepair"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".viewRepairs"
            android:label="@string/title_activity_view_repairs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".scrollViewRepair"
            android:label="@string/title_activity_scroll_view_repair"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".searchDateRepair"
            android:label="@string/title_activity_search_date_repair"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>